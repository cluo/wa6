{
    "signup":{
        "action":"/API/MemberControl/signup",
        "method":"post",
        "title":"用户注册",
        "fields":[
            {
                "label":"昵称",
                "attribute":{
                    "type":"text",
                    "name":"nickname"
                }
            },
            {
                "label":"真实姓名",
                "attribute":{
                    "type":"text",
                    "name":"realname"
                }
            },
            {
                "label":"性别",
                "comp":"form-radio",
                "el":[
                    {
                        "label":"男",
                        "attribute":{
                            "name":"gender",
                            "value":"1"
                        }
                    },
                    {
                        "label":"女",
                        "attribute":{
                            "name":"gender",
                            "value":"2"
                        }
                    }
                ]
            },
            {
                "label":"爪机号",
                "attribute":{
                    "type":"text",
                    "name":"phone"
                }
            },
            {
                "label":"微信号",
                "attribute":{
                    "type":"text",
                    "name":"wechat"
                }
            }
        ]
    },
    "changeinfo":{
        "action":"/API/MemberControl/changeinfo",
        "method":"post",
        "title":"修改资料",
        "same_as":"signup"
    }
}